@model Shelter.Shared.Animal;

@{
    ViewData["Title"] = Model.Name;
}

<p>
Are you sure you want to delete @Model.Name ?
</p>

<form asp-controller="Shelter" asp-action="DoDelete">
  <input asp-for="Id" type="hidden">
  <button type="submit">Delete</button>
</form> 

<a asp-controller="Shelter" asp-action="index"><button type="button">Go back</button></a>