@using System;
@using Shelter.Shared;
@using System.Collections.Generic;
@using Shelter.MVC.Models;

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th>Race</th>
    <th>Options</th>
    <th>Come</th>
    <th>Here</th>
  </tr>
  @foreach (var item in Model.Animals)
  {
    <tr>
      <td>@item.Name</td>
      <td></td>
      <td>@item.Race</td>
      <td><a asp-controller="Shelter" asp-action="Detail" asp-route-id=@item.Id>Detail</a></td>
      <td><a asp-controller="Shelter" asp-action="Update" asp-route-id=@item.Id>Update</a></td>
      <td><a asp-controller="Shelter" asp-action="Delete" asp-route-id=@item.Id>Delete</a></td>

    </tr>
  }
</table>